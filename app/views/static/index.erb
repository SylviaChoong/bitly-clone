<div class="jumbotron text-center">
  	<h2>UNLEASH THE POWER OF THE LINK</h2>
  	<% if @errors %><%= @errors %><% end %>
    <div class="modal" id="modal1">
      <a class="close" title="Close"><img src="data:image/png;base64,"/></a>
      <h1>Start Here</h1>
      <p style="color:#838383;">Copy a long url and paste here.</p>
      <a class="inst_next_btn">Next ></a>
    </div>

    <form class="form-inline" action = "/urls" method = "post">
      Enter URL : 
      <input type = "text" class="form-control" size="50" name = "long_url">
      <input type = "submit" class="btn btn-danger" value = "Submit">
    </form>
</div>

<!-- Container (About Section) -->
<div id="about" class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
    	<table id = "url_table">
	  	  <tr>
			    <th>Generated URL</th>
			    <th>Num of Clicks</th>
		  	</tr>

		  	<% @urls.each do |url| %>
		  
			  <tr>
			    <td><a href="<%= url.short_url %>">http://localhost:9393/<%= url.short_url %></a></td>
			    <td><%= url.click_count %></td>
			  </tr>
		
				<% end %>
        <div class="modal" id="modal2">
          <a class="close" title="Close"><img src="data:image/png;base64,"/></a>
          <h1>Find your link here.</h1>
          <p style="color:#838383;">Long URL becomes short URL.</p>
        </div>
			</table>
    </div>
  </div>
</div>

<div class="container-fluid bg-grey" style="-webkit-animation: animation 30s ease infinite;-moz-animation: animation 30s ease infinite;animation: animation 30s ease infinite;background: linear-gradient(270deg, #04072b, #175f4d, #203343, #0c7258);background-size: 800% 800%;">
